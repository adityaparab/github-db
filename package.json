{
  "name": "@adityaparab/github-db",
  "version": "0.0.3",
  "description": "Using GitHub as a database",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ghdb": "./bin/ghdb.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "dev": "concurrently -k \"npm run tsc:dev\" \"npm run test:dev\" \"npm run nodemon\"",
    "dev:norun": "concurrently -k \"npm run tsc:dev\" \"npm run test:dev\"",
    "nodemon": "nodemon ./dist/index.js -- --config ./config.json",
    "predev": "npm run clean && npm run tsc",
    "test": "jest",
    "test:dev": "jest --watch",
    "tsc": "tsc",
    "tsc:dev": "tsc --watch --declaration false",
    "predeploy": "npm run clean",
    "deploy": "npm run lint && npm run test && npm run tsc",
    "prepublish": "npm run deploy",
    "lint": "tslint --project ./",
    "lint:fix": "tslint --project ./ --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adityaparab/github-db.git"
  },
  "keywords": [],
  "author": "Aditya Parab <contact.adityaparab@gmail.com>",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/adityaparab/github-db/issues"
  },
  "homepage": "https://github.com/adityaparab/github-db#readme",
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/fs-extra": "^5.0.4",
    "@types/inversify": "^2.0.33",
    "@types/jest": "^23.3.5",
    "@types/joi": "^14.0.1",
    "@types/node": "^10.11.4",
    "@types/q": "^1.5.1",
    "@types/reflect-metadata": "^0.1.0",
    "@types/restify": "^7.2.6",
    "@types/restify-cors-middleware": "^1.0.1",
    "@types/uniqid": "^4.1.2",
    "@types/yargs": "^12.0.1",
    "concurrently": "^4.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "fs-extra": "^7.0.0",
    "inversify": "^5.0.1",
    "joi": "^14.3.0",
    "q": "^1.5.1",
    "readline": "^1.3.0",
    "reflect-metadata": "^0.1.12",
    "restify": "^7.3.0",
    "restify-cors-middleware": "^1.1.1",
    "restify-router": "^0.5.1",
    "rxjs": "^6.3.3",
    "uniqid": "^5.0.3",
    "yargs": "^12.0.2"
  }
}
